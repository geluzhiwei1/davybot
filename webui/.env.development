# Development Environment Configuration
# 开发环境配置

# ==================== 日志配置 ====================
# 启用日志系统
VITE_LOGGING_ENABLED=true

# 日志级别: debug | info | warn | error
# 开发环境建议使用 debug，获取完整日志
VITE_LOG_LEVEL=debug

# 是否输出到浏览器控制台
VITE_LOG_CONSOLE=true

# ==================== API 配置 ====================
# 是否记录 HTTP 请求日志
VITE_API_LOG_REQUESTS=true

# 是否记录 HTTP 响应日志
VITE_API_LOG_RESPONSES=true

# ==================== 调试配置 ====================
# 是否启用调试模式
VITE_DEBUG=true

# 是否暴露全局调试对象到 window（开发工具）
VITE_DEBUG_EXPOSE_GLOBAL=true

# ==================== DevTools 配置 ====================
# 是否自动打开 DevTools（仅 Tauri 有效）
VITE_DEVTOOLS_AUTO_OPEN=true

# ==================== WebSocket 配置 ====================
# 是否启用自动重连
VITE_WS_AUTO_RECONNECT=true

# 重连延迟（毫秒）
VITE_WS_RECONNECT_DELAY=3000

# 最大重连次数（0=无限重连）
VITE_WS_MAX_RECONNECT_ATTEMPTS=0

# ==================== 应用信息 ====================
VITE_APP_VERSION=0.1.2
